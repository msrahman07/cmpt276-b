<!DOCTYPE html>
<html>
  <head>
    <title>Udio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  	<header>
      <div>
      	<div class="header">
      		<h1> Udio</h1>
        	<%= link_to image_tag("notebook.png", :alt => "Udio logo", :id => "logo"), {action: 'index', controller: '/login'} %>
      	</div>

        <nav>
          <ul>
            <li><%= link_to "Home",   '/login/index' %></li>
            <li><%= link_to "Sell", '/sell' %></li>
            <li><%= link_to "Buy", '#' %></li>
            <li><%= link_to "About", '#' %></li>
            <li><%= link_to "Log in", '/users/sign_in' %></li>
            <li><%= link_to "Sign up", '/users/sign_up' %></li>
            <!--<li><%= link_to "Sign out", '/users/sign_out' %></li>-->
            <li><% if user_signed_in? %>
  		<li>
  		<%= link_to "Sign out", '/users/sign_out' %>        
  		</li>
		<% end %></li>
          </ul>
        </nav>
      </div>
    </header>
    <div>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>  
  </body>
</html>
